@model MagicVilla_Web.Models.VM.VillaNumberDeleteVM

@{
    ViewData["Title"] = "Delete Villa Number";
}
<form asp-action="DeleteVillaNumber">
    <br />
    <div class="container p-3 border">
        <h1 class="text-primary">Delete Villa Number</h1>
        <hr />
        <div class="row">
            <input type="hidden" asp-for="VillaNumber.VillaNo" />
            <div class="col-2">
                <label asp-for="VillaNumber.VillaNo" class="control-label p-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNumber.VillaNo" class="form-control" disabled />
            </div>
            <div class="col-2">
                <label asp-for="VillaNumber.VillaId" class="control-label p-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="VillaNumber.VillaId" disabled class="form-select" asp-items="@Model.VillaList">
                    <option disabled selected>--Select Villa--</option>
                </select>
            </div>
            <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" class="control-label p-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="VillaNumber.SpecialDetails" class="form-control" rwos="" disabled></textarea>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNumber" asp-controller="VillaNumber" class="btn btn-primary form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>

        </div>
    </div>
</form>



@section Scripts {
    @* <partial name="_ValidationScriptsPartial" /> *@
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
